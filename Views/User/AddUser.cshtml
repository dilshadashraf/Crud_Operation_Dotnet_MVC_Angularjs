
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />    
    <title>AddUser</title>
</head>
<body>
    <div class="container" ng-app="myApp" ng-controller="myCtrl" ng-init="GetSingleUserDetails();">
        <div class="row p-3">
            <div class="col-md-6">
                <h3>Registratio Form</h3>
            </div>
            <div class="col-md-6">
                <a href="/User/ViewUser" class="btn btn-outline-info">View Users</a>
            </div>
        </div>
        <div class="row p-1">
            <div class="col-md-6"> User Name</div>
            <div class="col-md-6">
                <input type="text" class="form-control" ng-model="userName" />
            </div>
        </div>
        <div class="row p-1">
            <div class="col-md-6">Password</div>
            <div class="col-md-6">
                <input type="password" ng-disabled="isPasswordDisabled" class="form-control" ng-model="password" />
            </div>
        </div>
        <div class="row p-1">
            <div class="col-md-6">Email</div>
            <div class="col-md-6">
                <input type="text" class="form-control" ng-model="email" />
            </div>
        </div>
        <div class="row p-1">
            <div class="col-md-6">Mobile</div>
            <div class="col-md-6">
                <input type="text" class="form-control" ng-model="mobile" />
            </div>
        </div>
        <div class="row p-1">
            <div class="col-md-6"></div>
            <div class="col-md-6">
                <input type="button" value="Save" class="btn btn-primary" ng-click="Register()" />
            </div>
        </div>
    </div>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/CRUDJs.js"></script>
</body>
</html>
